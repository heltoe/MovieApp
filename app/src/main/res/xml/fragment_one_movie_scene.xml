<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/card_image" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="50"
                motion:motionTarget="@+id/card_image" />
            <!-- -->
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/card_image_overlay" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="50"
                motion:motionTarget="@+id/card_image_overlay" />
        </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/card_image_overlay"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/start"></ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <Constraint
            android:id="@+id/card_image_overlay"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <Constraint
            android:id="@+id/containerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@id/container"
            motion:layout_constraintTop_toBottomOf="@+id/backBtn" />
        <Constraint
            android:id="@+id/containerRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@id/container"
            motion:layout_constraintTop_toBottomOf="@+id/containerName" />
        <Constraint
            android:id="@+id/card_year_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@id/container"
            motion:layout_constraintTop_toBottomOf="@+id/containerRating" />
        <Constraint
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@id/container"
            motion:layout_constraintTop_toBottomOf="@+id/card_year_duration" />
    </ConstraintSet>
</MotionScene>